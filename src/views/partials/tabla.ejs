<div class="container">
    <div class="row mt-5">        
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂº</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Foto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++ ) {%>
                            <tr>
                                <td><%= (i + 1)%></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].address %></td>
                                <td><%= data[i].phone %></td>
                                <td>
                                    <img src="https://raw.githubusercontent.com/andrymoran/MHFotos/index/Zapatos%20de%20hombre/8517a-01.jpg" class="card-img-top">
                                </td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>"class = "btn btn-danger">Delete</a>
                                    <a href="/update/<%= data[i].id %>"class = "btn btn-info">Modificar</a>
                                </td>                                 
                            </tr>                        
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div> 
        
        <div class="col-md-5">            
                <div class="card">
                    <div class="card-body"> 
                        <form action="/add" method="post">                   
                            <div class="from-group">
                                <input type="text" name="name" placeholder="Name" class="from-control">
                            </div>
                            <div class="from-group">
                                <input type="text" name="address" placeholder="Adress" class="from-control">
                            </div>
                            <div class="from-group">
                                <input type="text" name="phone" placeholder="Phone" class="from-control">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Save Customer
                            </button>  
                       </form>
                    </div>
            </div>
                                
        </div>
    </div>
</div>
